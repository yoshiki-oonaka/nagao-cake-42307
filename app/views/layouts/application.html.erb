<!DOCTYPE html>
<html>
  <head>
    <title>ながのCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-white">
      <nav class="navbar navbar-expand-lg navbar-white bg-white">
        <div class="container">
          <%= link_to image_tag("ケーキのアイコン.png"), "/" %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">

                  <!--管理者がログインしている時-->
                  <%if admin_signed_in? %>
                    <li class="nav-item">
                      <%= link_to admin_items, class: "btn btn-outline-secondary" do %>
                        商品一覧
                      <% end %>
                    </li>
                    <li class="nav-item">
                      <%= link_to admin_customers, class: "btn btn-outline-secondary" do %>
                        会員一覧
                      <% end %>
                    </li>
                    <li class="nav-item">
                      <%= link_to admin_order, class: "btn btn-outline-secondary" do %>
                        注文履歴一覧
                      <% end %>
                    </li>
                    <li class"nav-item">
                      <%= link_to admin_genres, class: "btn btn-outline-secondary" do %>
                        ジャンル一覧
                      <% end %>
                    </li>
                    <li class="nav-item">
                      <%= link_to destroy_admin_session, method: :delete, class: "btn btn-outline-secondary" do %>
                        ログアウト
                      <% end %>
                    </li>

                    <!--ユーザーがログインしている時-->
                  <% elsif customer_signed_in? %>
                    <li>
                      ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！
                    </li>
                    <li class="nav-item">
                      <%= link_to customer_customer, class: "btn btn-outline-secondary" do %>
                        マイページ
                      <% end %>
                    </li>
                    <li class="nav-item">
                      <%= link_to customer_items, class: "btn btn-outline-secondary" do %>
                        商品一覧
                      <% end %>
                    </li>
                    <li class="nav-item">
                      <%= link_to
                    </li>
                </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
