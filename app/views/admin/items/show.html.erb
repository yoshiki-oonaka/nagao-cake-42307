<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h2>商品詳細</h2>
      <%= image_tag @item, :image, :fill, 300, 300, fallback: 'no_image.jpg' %>
    </div>

    <div class="col-xs-8">
      <table class="table">

        <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <Td>商品説明</Td>
          <td><%= @item.description %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>税抜価格</td>
          <td><%= (@item.price*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td><% if @item.is_active == false %>
              販売中
              <% else %>
              販売停止中
              <% end %>
          </td>
        </tr>
        </tbody>
      </table>

      <div class="col-md-offset-1 col-md-2 text-right">
        <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>