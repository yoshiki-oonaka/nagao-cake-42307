<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>会員情報詳細</h2>
    </div>

    <table class="table">

      <tr>
        <td>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>

      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>

      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>

      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>

      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>

      <tr>
        <td><% if @customer.is_customer_status == false %>
            <span class="label label-primary">
            有効会員
            </span>
            <% else %>
            <span class="label label-danger">
            退会済み
            </span>
            <% end %>
        </td>
      </tr>
    </table>

    <div class="row">
      <%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-success" %>
      <%= link_to "注文一覧を見る",admins_orders_path, class: "btn btn-success" %>
    </div>

  </div>
</div>