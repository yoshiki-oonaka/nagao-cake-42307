<p id="notice"></p>

<main>
  <body>
    <div class="container">

      <div class="row">
        <div class="col-lg-4 pt-5 text-center bg-light">
          <h5>ジャンル編集</h5>
        </div>
      </div>

      <%= form_with model: @genre do |f| %>
        <div class="row">

          <div class="col-3 form-group text-center">
            <%= f.label :ジャンル名 %>
          </div>

          <div class="col-3">
            <%= f.text_field :name, class: "col-md-4" %>
          </div>

          <div class="col-3">
            <%= f.submit '変更を保存',class: "btn btn-success" %>
          </div>
        </div>

      <% end %>

    </div>
  </body>
</main>