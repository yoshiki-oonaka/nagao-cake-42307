<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>商品一覧</h2>

      <div class="text-right">
        <%= link_to "新規登録" ,new_admins_item_path, class:"btn btn-lg btn-primary" %>
      </div>

      <table class="table">
        <thead>
          <tr>
            <td>商品ID</td>
            <td>商品名</td>
            <td>税抜価格</td>
            <td>ジャンル</td>
            <td>ステータス</td>
          </tr>
        </thead>

        <tbody>
          <%= @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name ,admins_item_path(item) %></td>
              <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
              <td><%= item.genre.name %></td>
              <td><% if item.is_active == false %>
                  販売中
                  <% else %>
                  販売停止中
                  <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @items %>
        </tbody>
      </table>
    </div>
  </div>
</div>